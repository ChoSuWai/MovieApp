<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_medium_2"
    android:layout_marginTop="@dimen/margin_medium_2"
    android:layout_marginEnd="@dimen/margin_medium_2"
    android:background="@color/white_full"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:background="@color/white_full"
        app:cardCornerRadius="@dimen/margin_medium"
        app:cardElevation="@dimen/margin_medium">

        <ImageView
            android:id="@+id/ivMoviePoster"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_placeholder" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="15">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white_full" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="13"
            android:background="@drawable/rounded_border_movies_itemview"
            android:backgroundTint="@color/movie_item_view_bgcolor">

            <TextView
                android:id="@+id/tvMovieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium_3"
                android:text="Minions"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_regular_2x"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvGenres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvMovieTitle"
                android:layout_alignStart="@id/tvMovieTitle"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:text="Animation, Adventure"
                android:textSize="@dimen/text_regular" />

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvGenres"
                android:layout_alignStart="@id/tvMovieTitle"
                android:text="4"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_heading_1x"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBaseRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvGenres"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_toEndOf="@id/tvRating"
                android:text="/5"
                android:textSize="@dimen/text_regular" />

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/rbMovies"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvGenres"
                android:layout_marginStart="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_toEndOf="@id/tvBaseRating"
                android:isIndicator="true"
                android:numStars="5"
                android:progressBackgroundTint="@color/black_full"
                android:progressTint="@color/primary"
                android:rating="3.5"
                android:stepSize="0.1" />

            <ImageView
                android:id="@+id/btn_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tvMovieTitle"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin_medium"
                android:clickable="true"
                android:foreground="@drawable/ripple"
                android:padding="@dimen/margin_small"
                android:src="@drawable/ic_baseline_favorite_red_24" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

